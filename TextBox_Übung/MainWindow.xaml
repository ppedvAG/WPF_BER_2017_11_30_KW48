<Window x:Class="TextBox_Übung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextBox_Übung"
        mc:Ignorable="d"
        Title="TextBoxÜbung" Height="281.454" Width="505.638">
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top"
                   Text="Bitte geben Sie einen Text ein:"/>
        
        <WrapPanel DockPanel.Dock="Bottom"
                   HorizontalAlignment="Right">
            <Button Content="OK"
                    Width="80"
                    Margin="10,0"/>
            <Button Content="Abbrechen"
                    Width="80"/>
        </WrapPanel>

        <!--Einige Controls, wie die TextBox haben einen ScrollViewer eingebaut, welcher über eine AttachedProperty angesprochen werden kann-->
        <TextBox Margin="0,5" 
                 AcceptsReturn="True"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>
